# Real Estate OS - Staging Environment Variables
# Copy this file to .env.staging and fill in actual values
# DO NOT commit .env.staging to git (it's in .gitignore)

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_DB=realestate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_PORT=5432

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE
REDIS_PORT=6379

# =============================================================================
# Keycloak (Authentication)
# =============================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_KEYCLOAK_ADMIN_PASSWORD
KEYCLOAK_HOSTNAME=localhost
KEYCLOAK_PORT=8080
KEYCLOAK_REALM=real-estate-os
KEYCLOAK_CLIENT_ID=api-client

# =============================================================================
# MinIO (Object Storage)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD_HERE
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# =============================================================================
# Qdrant (Vector Database)
# =============================================================================
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# =============================================================================
# Neo4j (Graph Database)
# =============================================================================
NEO4J_PASSWORD=CHANGE_ME_NEO4J_PASSWORD_HERE
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# =============================================================================
# Airflow
# =============================================================================
AIRFLOW_ADMIN_USER=airflow
AIRFLOW_ADMIN_PASSWORD=CHANGE_ME_AIRFLOW_PASSWORD_HERE
AIRFLOW_FERNET_KEY=GENERATE_WITH_python_-c_"from_cryptography.fernet_import_Fernet;_print(Fernet.generate_key().decode())"
AIRFLOW_WEBSERVER_SECRET_KEY=GENERATE_RANDOM_STRING_HERE
AIRFLOW_WEBSERVER_PORT=8081

# =============================================================================
# Prometheus
# =============================================================================
PROMETHEUS_PORT=9090

# =============================================================================
# Grafana
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_HERE
GRAFANA_PORT=3000

# =============================================================================
# API Service
# =============================================================================
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Observability (Optional)
# =============================================================================
SENTRY_DSN=  # Leave empty to disable Sentry

# =============================================================================
# Quickstart Commands
# =============================================================================
# 1. Copy this file:
#    cp .env.staging.example .env.staging
#
# 2. Generate secrets:
#    python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 3. Start services:
#    docker compose --env-file .env.staging -f docker-compose.staging.yml up -d
#
# 4. Apply migrations:
#    bash scripts/ops/apply_migrations.sh
#
# 5. Health check:
#    bash scripts/ops/health_check.sh
