# ============================================================================
# Real Estate OS - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================================
# Database Configuration
# ============================================================================
DB_DSN=postgresql://user:password@localhost:5432/real_estate_os
# Example: postgresql://realestate:secret123@postgres:5432/realestate_prod

# ============================================================================
# Authentication & Security (PR#1)
# ============================================================================
# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here-generate-with-secrets-module

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# OIDC/OAuth2 Configuration (Optional - for Keycloak/Auth0 integration)
# OIDC_PROVIDER_URL=https://your-keycloak.com/auth/realms/your-realm
# OIDC_CLIENT_ID=real-estate-os
# OIDC_CLIENT_SECRET=your-client-secret

# CORS Configuration (Production)
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-production-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_TENANT_MINUTE=100

# Security Headers
ENABLE_HSTS=false  # Set to true in production with HTTPS
ENABLE_CSRF_PROTECTION=true

# ============================================================================
# Email Service Configuration (Wave 3.3)
# ============================================================================
# Email provider: 'sendgrid', 'mailgun', or 'smtp'
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Real Estate OS

# Mailgun Configuration (alternative)
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=mg.yourdomain.com
# MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# SMTP Configuration (fallback)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=your-email@gmail.com

# ============================================================================
# ML Services
# ============================================================================
# Portfolio Twin Service (Wave 2.2)
PORTFOLIO_TWIN_URL=http://localhost:8001

# Similarity Engine Service (Wave 2.3)
SIMILARITY_SERVICE_URL=http://localhost:8002

# Comp-Critic Service (Wave 3.1)
COMP_CRITIC_URL=http://localhost:8003

# Negotiation Brain Service (Wave 3.2)
NEGOTIATION_BRAIN_URL=http://localhost:8004

# ============================================================================
# Redis Configuration (for caching - PR#5)
# ============================================================================
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password
# REDIS_TTL_SECONDS=3600

# ============================================================================
# Observability (PR#4)
# ============================================================================
# Sentry Configuration
# SENTRY_DSN=https://your-sentry-key@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# OpenTelemetry Configuration
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_SERVICE_NAME=real-estate-os-api

# ============================================================================
# Secrets Management (Production)
# ============================================================================
# Use Vault or SOPS for production secrets
# VAULT_ADDR=https://vault.yourdomain.com
# VAULT_TOKEN=your-vault-token
# VAULT_PATH=secret/data/real-estate-os
