# Application
APP_NAME=Real Estate OS
APP_VERSION=0.1.0
DEBUG=false

# Database
DB_DSN=postgresql://user:password@localhost:5432/realestate

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT Algorithm (HS256 or RS256)
JWT_ALGORITHM=HS256
# JWT_PRIVATE_KEY=  # For RS256
# JWT_PUBLIC_KEY=   # For RS256

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email (Mock)
EMAIL_PROVIDER=mock
EMAIL_FROM=noreply@realestateos.com

# SMS (Mock)
SMS_PROVIDER=mock

# Storage (S3)
STORAGE_PROVIDER=s3
S3_BUCKET_NAME=real-estate-os
S3_REGION=us-east-1
