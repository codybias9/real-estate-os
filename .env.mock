# =============================================================================
# MOCK MODE CONFIGURATION
# Complete demo-ready environment with NO external dependencies
# =============================================================================

# MOCK MODE ENABLED - All external services use mock implementations
MOCK_MODE=true

# =============================================================================
# DATABASE (In-cluster PostgreSQL - REQUIRED)
# =============================================================================
DB_DSN=postgresql://postgres:postgres@postgres:5432/real_estate_os
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# REDIS (In-cluster - REQUIRED)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# MESSAGE QUEUE (In-cluster RabbitMQ - REQUIRED)
# =============================================================================
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672/
CELERY_BROKER_URL=amqp://admin:admin@rabbitmq:5672/
CELERY_RESULT_BACKEND=redis://redis:6379/1

# =============================================================================
# AUTHENTICATION (Mock-safe values)
# =============================================================================
JWT_SECRET_KEY=mock-jwt-secret-for-demo-only-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
REFRESH_TOKEN_EXPIRATION_DAYS=30

# =============================================================================
# EMAIL SERVICE - MOCK MODE (No API key needed)
# =============================================================================
# These are placeholder values - ignored in MOCK_MODE
SENDGRID_API_KEY=mock-sendgrid-key-not-used
SENDGRID_FROM_EMAIL=demo@real-estate-os.com
SENDGRID_FROM_NAME=Real Estate OS Demo
SENDGRID_WEBHOOK_SECRET=mock-webhook-secret

EMAIL_PROVIDER=sendgrid

# =============================================================================
# SMS & VOICE - MOCK MODE (No API key needed)
# =============================================================================
# These are placeholder values - ignored in MOCK_MODE
TWILIO_ACCOUNT_SID=mock-twilio-sid-not-used
TWILIO_AUTH_TOKEN=mock-twilio-token-not-used
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_VERIFY_SERVICE_SID=mock-verify-sid-not-used

# =============================================================================
# OBJECT STORAGE (In-cluster MinIO - REQUIRED)
# =============================================================================
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=real-estate-os-files
S3_USE_SSL=false

# Storage paths
S3_MEMOS_FOLDER=memos/
S3_PACKETS_FOLDER=packets/
S3_ARTIFACTS_FOLDER=artifacts/

# =============================================================================
# DATA PROVIDER APIs - MOCK MODE (No API keys needed)
# =============================================================================
# These are placeholder values - data providers use built-in mock data
ATTOM_API_KEY=mock-attom-key-not-used
ATTOM_API_URL=https://api.gateway.attomdata.com/propertyapi/v1.0.0
ATTOM_MONTHLY_QUOTA=1000
ATTOM_COST_PER_REQUEST=0.10

REGRID_API_TOKEN=mock-regrid-token-not-used
REGRID_API_URL=https://app.regrid.com/api/v2
REGRID_MONTHLY_QUOTA=5000
REGRID_COST_PER_REQUEST=0.08

# Free data sources (work without keys)
OPENADDRESSES_ENABLED=true
FEMA_ENABLED=true
USGS_ENABLED=true
OSM_ENABLED=true

# =============================================================================
# PAYMENT PROCESSING - MOCK MODE (No API key needed)
# =============================================================================
STRIPE_SECRET_KEY=mock-stripe-key-not-used
STRIPE_PUBLISHABLE_KEY=mock-stripe-pk-not-used
STRIPE_WEBHOOK_SECRET=mock-stripe-webhook-not-used

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Sentry (Optional - disable in mock mode)
SENTRY_DSN=
SENTRY_ENVIRONMENT=mock
SENTRY_TRACES_SAMPLE_RATE=0.0

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=mock
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate limiting (relaxed for demo)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=1000

# Cache TTL (seconds)
CACHE_TTL=300

# Session
SESSION_SECRET_KEY=mock-session-secret-for-demo-only

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_BACKGROUND_JOBS=true
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_TRACKING=true
ENABLE_SMS_TRACKING=true

# =============================================================================
# DEMO DATA SETTINGS
# =============================================================================
# Auto-seed demo data on startup
SEED_DEMO_DATA=true
DEMO_TEAM_COUNT=2
DEMO_USER_COUNT=10
DEMO_PROPERTY_COUNT=50

# Demo user credentials
DEMO_ADMIN_EMAIL=admin@demo.com
DEMO_ADMIN_PASSWORD=password123
DEMO_MANAGER_EMAIL=manager@demo.com
DEMO_MANAGER_PASSWORD=password123
DEMO_AGENT_EMAIL=agent@demo.com
DEMO_AGENT_PASSWORD=password123

# =============================================================================
# MOCK BEHAVIOR SETTINGS
# =============================================================================
# Simulate realistic delays (milliseconds)
MOCK_EMAIL_DELAY=100
MOCK_SMS_DELAY=50
MOCK_PDF_DELAY=200
MOCK_STORAGE_DELAY=10

# Simulate realistic success rates (0-100%)
MOCK_EMAIL_SUCCESS_RATE=97
MOCK_SMS_SUCCESS_RATE=98
MOCK_STORAGE_SUCCESS_RATE=99

# Simulate realistic engagement (0-100%)
MOCK_EMAIL_OPEN_RATE=35
MOCK_EMAIL_CLICK_RATE=12
MOCK_SMS_RESPONSE_RATE=8

# =============================================================================
# DOCKER COMPOSE SETTINGS
# =============================================================================
COMPOSE_PROJECT_NAME=real-estate-os
COMPOSE_FILE=docker-compose.yml

# Container resource limits (for local dev)
API_MEMORY_LIMIT=1g
CELERY_MEMORY_LIMIT=1g
POSTGRES_MEMORY_LIMIT=512m
REDIS_MEMORY_LIMIT=256m

# =============================================================================
# ADDITIONAL SERVICES (All optional in mock mode)
# =============================================================================
# Mailgun (alternative to SendGrid - disabled in mock)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_WEBHOOK_SECRET=

# AWS (for production S3 - disabled in mock, using MinIO)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# CloudFront CDN (disabled in mock)
CDN_BASE_URL=

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================
# DNC (Do Not Call) list provider
DNC_PROVIDER=mock
DNC_API_KEY=mock-dnc-key-not-used

# TCPA Compliance
TCPA_ENABLED=true
TCPA_LOG_ALL_COMMUNICATIONS=true

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
# Automated backups (disabled in mock - ephemeral data)
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Database connection pool
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10
DB_POOL_TIMEOUT=30

# Redis connection pool
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=5

# Celery worker concurrency
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=4

# =============================================================================
# DEVELOPMENT HELPERS
# =============================================================================
# Hot reload
RELOAD_ON_CHANGE=true

# SQL query logging
SQL_ECHO=false

# Show detailed errors
SHOW_ERROR_DETAILS=true

# API documentation
DOCS_ENABLED=true
REDOC_ENABLED=true

# =============================================================================
# NOTES
# =============================================================================
# This configuration enables full demo mode with:
# - No external API dependencies
# - Mock email/SMS/storage/PDF generation
# - Realistic fake data and behavior
# - Complete feature functionality
# - Safe for presentations and testing
#
# To switch to production mode:
# 1. Set MOCK_MODE=false
# 2. Provide real API keys for SendGrid, Twilio, etc.
# 3. Update database/redis/storage credentials
# 4. Configure proper secrets and security settings
# =============================================================================
